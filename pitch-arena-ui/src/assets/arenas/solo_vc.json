{
  "id": "arena_vc_fast_solo",
  "name": "VC Solo Arena (Fast)",
  "description": "One-judge arena for fast iteration: Host + VC only, richer attack pool.",
  "safety": [
    "no adult entertainment",
    "test anything to do with children",
    "no medical advice",
    "no NSFW"
  ],
  "objective": {
    "thesis": "Fast loop test with a single VC judge, but many different question types to avoid repetition.",
    "successDefinition": [
      "Warm-up completes quickly",
      "VC produces varied questions across rounds",
      "Rescore reliably advances and avoids repeats",
      "End state reached within 1â€“2 rounds"
    ],
    "deliverables": {
      "endOfRound": [
        "quick_verdict",
        "top_strength",
        "top_risk",
        "next_step_24h"
      ]
    },
    "constraints": {
      "noInvestorTalk": false,
      "toneFloor": "respectful",
      "timeboxPerJudgeSeconds": 20,
      "maxRounds": 3,
      "fastMode": false,
      "parseMode": "fast",
      "summaryMode": "template",
      "llmTimeoutMs": 10000
    }
  },
  "rubric": {
    "scale": { "min": 0, "max": 10, "decimals": 1 },
    "criteriaWeights": [
      { "id": "fundability", "label": "Fundability", "weightPct": 40 },
      { "id": "feasibility", "label": "Feasibility", "weightPct": 35 },
      { "id": "usefulness", "label": "Usefulness", "weightPct": 25 }
    ],
    "scoreGuidance": {
      "9_10": "Crisp, concrete, compelling; few open gaps; clear next step.",
      "7_8": "Solid, but missing one key detail or has one major risk unaddressed.",
      "5_6": "Understandable but vague; unclear buyer/mechanism/loop; needs focus.",
      "0_4": "Hard to understand or internally inconsistent; missing basics."
    }
  },
  "voices": {
    "host": "6F5Zhi321D3Oq7v1oNT4",
    "vc": "NYC9WEgkq1u4jiqBseQ9"
  },
  "globalStyle": {
    "toneDefault": "direct",
    "modes": {
      "discovery": {
        "label": "Discovery",
        "goal": "Clarify the idea with friendly precision."
      },
      "interrogation": {
        "label": "Pressure-test",
        "goal": "Go deeper on one weak spot without theatrics."
      }
    },
    "bannedPhrases": [
      "who pays",
      "pull out their credit card",
      "what budget does it come from",
      "if you had 14 days",
      "what do you cut",
      "vaporware",
      "marketing fluff",
      "glorified forum",
      "you will fail",
      "worst customer segment",
      "starve",
      "catastrophic",
      "pass",
      "no-go"
    ],
    "bannedCliches": [
      "validate",
      "do customer discovery",
      "it depends",
      "just iterate",
      "go viral",
      "leverage ai"
    ],
    "conversationRules": {
      "maxCommentWords": 80,
      "oneQuestionOnly": true,
      "questionMaxSentences": 1,
      "deEscalateIfDefensive": true,
      "avoidRepetitiveTemplates": true,
      "avoidCategoricalLanguage": true
    }
  },
  "judges": [
    {
      "id": "host",
      "label": "Host",
      "dimension": "Warm-up",
      "tone": "grumpy, wants the info but a little impatient",
      "profileConfig": [
        "founderName",
        "ideaName",
        "pitch",
        "targetUser",
        "targetContext",
        "firstValue",
        "acquisitionPath",
        "inputSource"
      ]
    },
    {
      "id": "vc",
      "label": "VC Judge",
      "dimension": "Clarity & Viability",
      "tone": "direct",
      "criteriaConfig": [
        {
          "id": "buyer_value",
          "category": "buyer",
          "weight": 2,
          "description": "Make the buyer/value exchange concrete.",
          "signals": ["named_entity", "example"],
          "qTypes": ["clarify_who", "transaction_concrete"],
          "questionStarters": [
            "Who is happiest when this works, and what do they believe they gained?",
            "If this disappeared tomorrow, who would feel it most and why?"
          ]
        },
        {
          "id": "moment_trigger",
          "category": "user",
          "weight": 2,
          "description": "Clarify the trigger and moment of use.",
          "signals": ["example"],
          "qTypes": ["moment_trigger"],
          "questionStarters": [
            "What happens right before someone reaches for this?",
            "What is the 'oh no' moment that triggers action?"
          ]
        },
        {
          "id": "substitute_break",
          "category": "substitute",
          "weight": 2,
          "description": "Name the substitute and where it breaks.",
          "signals": ["example"],
          "qTypes": ["substitute_break", "switch_moment"],
          "questionStarters": [
            "What do they do today instead, and where does it fail?",
            "What finally makes the workaround unacceptable?"
          ]
        },
        {
          "id": "wedge_entry",
          "category": "wedge",
          "weight": 1,
          "description": "Find the smallest compelling entry point.",
          "signals": ["example", "next_step"],
          "qTypes": ["wedge_entry", "expansion_path"]
        },
        {
          "id": "channel_realism",
          "category": "distribution",
          "weight": 1,
          "description": "Force a realistic first acquisition path.",
          "signals": ["example"],
          "qTypes": ["channel_realism", "gtm_constraint"]
        },
        {
          "id": "pricing_anchor",
          "category": "pricing",
          "weight": 1,
          "description": "Get a rough price anchor tied to value.",
          "signals": ["numbers", "example"],
          "qTypes": ["pricing_anchor"]
        },
        {
          "id": "retention_loop",
          "category": "retention",
          "weight": 1,
          "description": "Explain why someone returns.",
          "signals": ["example"],
          "qTypes": ["retention_loop"]
        },
        {
          "id": "scope_slice",
          "category": "scope",
          "weight": 1,
          "description": "Define the smallest complete slice.",
          "signals": ["next_step"],
          "qTypes": ["scope_slice"]
        },
        {
          "id": "trust_boundary",
          "category": "trust",
          "weight": 1,
          "description": "Name worst failure + boundary between automate vs verify.",
          "signals": ["example", "mechanism"],
          "qTypes": ["trust_boundary"]
        }
      ],
      "scoring": {
        "usesRubric": true,
        "dimension": "fundability"
      }
    }
  ]
}
